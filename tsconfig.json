{
  "include": ["src"],
  "exclude": [
    "dist",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.config.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
